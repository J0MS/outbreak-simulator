<?xml version="1.0" encoding="UTF-8"?>
<project name="Epidemia" default="compile" basedir=".">

  <target name="compile">
    <mkdir dir="build"/>
    <javac srcdir="src" destdir="build" debug="true" debuglevel="source"  includeantruntime="false"/>
  </target>

  <target name="run" depends="compile">
    <java classname="com.outbreakSim.UsoEpidemia" fork="true">
      <classpath>
	<pathelement path="build" />

      </classpath>
    </java>
  </target>

  <target name="docs">
    <javadoc sourcepath="src" destdir="docs" packagenames="com.outbreakSim;" />
  </target>

  <target name="clean">
    <delete dir="build"/>
    <delete dir="docs"/>
  </target>

</project>
